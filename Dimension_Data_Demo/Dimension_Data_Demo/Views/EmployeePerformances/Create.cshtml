@model Dimension_Data_Demo.Models.EmployeePerformance

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EmployeePerformance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PerformanceRating" class="control-label"></label>
                <input asp-for="PerformanceRating" class="form-control" />
                <span asp-validation-for="PerformanceRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkLifeBalance" class="control-label"></label>
                <input asp-for="WorkLifeBalance" class="form-control" />
                <span asp-validation-for="WorkLifeBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobInvolvement" class="control-label"></label>
                <input asp-for="JobInvolvement" class="form-control" />
                <span asp-validation-for="JobInvolvement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.Message");
                    };
                </script>
            }
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
