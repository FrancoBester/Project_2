@model Dimension_Data_Demo.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeNumber" class="control-label"></label>
                <input asp-for="EmployeeNumber" class="form-control" />
                <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobId" class="control-label"></label>
                <select asp-for="JobId" class="form-control" asp-items="ViewBag.JobId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DetailsId" class="control-label"></label>
                <select asp-for="DetailsId" class="form-control" asp-items="ViewBag.DetailsId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PayId" class="control-label"></label>
                <select asp-for="PayId" class="form-control" asp-items="ViewBag.PayId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EducationId" class="control-label"></label>
                <select asp-for="EducationId" class="form-control" asp-items="ViewBag.EducationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SurveyId" class="control-label"></label>
                <select asp-for="SurveyId" class="form-control" asp-items="ViewBag.SurveyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HistoryId" class="control-label"></label>
                <select asp-for="HistoryId" class="form-control" asp-items="ViewBag.HistoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PerformanceId" class="control-label"></label>
                <select asp-for="PerformanceId" class="form-control" asp-items="ViewBag.PerformanceId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.Message");
                    };
                </script>
            }
            @if (ViewBag.Employee_new != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.Employee_new");
                    };
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
